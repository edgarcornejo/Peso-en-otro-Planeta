body
  background center center no-repeat url(/assets/img/fondo.jpg)
  background-size 100% auto
  background-color #000
  color #FFF

header, section
  text-align center
  max-width 1200px
  width 90%
  height auto
  margin 0 auto
  padding 60px 0 50px 0
  background rgba(0,0,0,0.5)
  h1
    font-weight bold
    font-size 3em
  h2
    font-size 1.2em
    font-style italic
    letter-spacing 2px
  p
    font-size 1em
    padding 20px 0 20px 0
  #resultado
    font-size 2em

form
  max-width 360px
  margin 0 auto
  .validanumericos, select, #btn_calcular
    border-radius 4px
  #btn_calcular
    width 50%
    height 2em
    border 0
    &:hover
      cursor pointer

footer 
  text-align center
