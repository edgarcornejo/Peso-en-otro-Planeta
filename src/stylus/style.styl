/*Template*/
:root
  font-size 16px
  --DomGris #5D5D5D
  color var(--DomGris)

@import url('https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:wght@200;700&display=swap')
@import "normalize.styl"

/*General*/
body
  font-family 'Barlow Semi Condensed', sans-serif

/*DOM*/
#main-dom
  width 100%
  height auto
  header
    padding-top 2rem
    h1
      font-size 3rem
      margin 0
  header, section
    margin 0 auto
    width 80%
    text-align center
  section
    p
      font-size 1.1rem
      padding-top 1rem
      padding-bottom 1rem
  form
    display flex
    justify-content space-between
    max-width 400px
    margin 0 auto
    #txt_line
      border solid 1px var(--DomGris)
      height 2rem
      display inline-block
      width 65%
      outline none
    #btn_pro
      background skyblue
      border-radius 3px
      padding 0.5rem
      border 0
      width 30%
    #btn_pro:hover
      cursor pointer
      border solid 1px var(--DomGris)


